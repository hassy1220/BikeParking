<div class="container">
      <div id="map" style="width:100%; height:600px"></div>
      <a>緯度：<%= @park.lat %></a>
      <a>経度：<%= @park.lng %></a>
    <div class="row">
      <div class="col-6">
          <% if @park.get_image(150,150) %>
            <!--投稿画像がなかったら、サンプリ画像を表示-->
          <% else %>
             <% @park.images.each do |image| %>
               <%= image_tag(image, width:150,height:150) %>
             <% end %>
          <% end %>

          <table class="table">
              <tr>
                <td>駐車場名</td>
                <td><%= @park.name %></td>
              </tr>
              <tr>
                <td>説明</td>
                <td><%= @park.description %></td>
              </tr>
              <tr>
                <td>金額</td>
                <td><%= @park.price %>円 / <%= @park.parking_time %>時間</td>
              </tr>
              <tr>
                <td>駐車可能条件</td>
                <td><%= @park.spec_i18n %></td>
              </tr>
          </table>
      </div>

      <div class="col-6">
        <div id="comment_btn">
          <h3>コメント</h3>
            <table class="table">
            <% @park_comments.each do |list| %>
              <tr>
                <% if list.customer.is_deleted == false %>
                  <td>
                    <%= image_tag list.customer.get_bike_image(50,50) %><br>
                    <%= list.customer.name %>
                  </td>
                  <td><%= list.comment %></td>
                <% end %>
              </tr>
            <% end %>
            </table>
            <%= paginate @park_comments %>
      </div>
    </div>
</div>


<input type="hidden" id="park_area_lat" value="<%= @park.lat %>">
<input type="hidden" id="park_area_lng" value="<%= @park.lng %>">

<script>
   function initMap() {
      // /18行目が初期マップ位置の拡大状況・19行目が緯度経度で福岡市を表示させる様にしている/
      var opts = {
        zoom: 15,
        center: new google.maps.LatLng(33.589815,130.412306),
        restriction: {
		　   　latLngBounds: {
		　   　	north: 33.600947,
		　   　	south: 33.577563,
		　　    	west: 130.386021,
		　　	      east: 130.440347
	　          },
	　　	strictBounds: true
　　    }
      };

      var map = new google.maps.Map(document.getElementById("map"), opts);

      //変数lat/lngを宣言し、park_area_lat/lng(ID)のValue値を取得
      var lat =document.getElementById("park_area_lat").value
    　var lng =document.getElementById("park_area_lng").value
      // LatLng(,)に19/20行目で取得した緯度経度を入れる。
      var m_latlng = new google.maps.LatLng(lat,lng);
      var marker = new google.maps.Marker({
   　   　　 position: m_latlng,
      　    map: map
      });
    }

 </script>