<div class="container">
  <div>
    <h1>マイページ</h1>
    <%= image_tag @customer.get_bike_image(400,400) %>
    <p>名前<%= @customer.name %></p>
    <p>自己紹介<%= @customer.description %></p>
    <% if @customer == current_customer %>
      <%= link_to"編集",edit_public_customer_path(current_customer.id) %>
    <% end %>
  </div>

  <div>
    <h3>いいね一覧</h3>
    <table class="table">
       <tr>
         <td>駐車場名</td>
         <td>説明</td>
         <td>目的地(商業施設、コンビニ等)</td>
       </tr>
       <% @customer.favorite_park.each do |park| %>
       <tr>
         <td>
           <%= link_to public_park_path(park.id) do %>
             <%= park.name %>
           <% end %>
         </td>
         <td><%= park.description %></td>
         <td><%= park.purpose %></td>
       </tr>
       <% end %>
      </table>
  </div>


</div>