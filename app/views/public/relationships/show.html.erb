<div class="container">
  <% if @key == "follow" %>
    <h1>フォロー一覧</h1>
    <table class="table">
      <% @follow_customer.each do |customer| %>
      <tr>
        <% if customer.follower.is_deleted == false %>
          <td><%= customer.follower.name %></td>
        <% end %>
      </tr>
      <% end %>
    </table>
  <% elsif @key == "follower" %>
  <h1>フォロワー一覧</h1>
    <table class="table">
      <% @follower_customer.each do |customer| %>
      <tr>
        <% if customer.follow.is_deleted == false %>
          <td><%= customer.follow.name %></td>
        <% end %>
      </tr>
      <% end %>
    </table>
  <% end %>
</div>