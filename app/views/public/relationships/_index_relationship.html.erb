 <% unless customer == current_customer %>
    <% if customer.follow_user_by(current_customer) %>
      <%= link_to"解除",public_customer_relationships_path(customer.id),method: :delete,remote: true,class:"btn btn-danger" %>
    <% else %>
      <%= link_to"フォロー",public_customer_relationships_path(customer.id),method: :post,remote: true,class:"btn btn-success" %>
    <% end %>
<% end %>