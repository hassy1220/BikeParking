<div class="container">
<%= form_with model: @contact,url: public_contacts_path do |f| %>
    <div class="form-group">
      <%= f.label :name, '名前*' %>
      <%= f.text_field :name, size: '10x10', class: 'form-control' %>
    </div>

  <div class="form-group">
    <%= f.label :message, 'メッセージ*' %>
    <%= f.text_area :message, size: '10x10', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, '返信用メールアドレス*' %>
    <%= f.email_field :email, size: '10x10', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name, '電話番号*' %>
    <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :subject, '要件*' %>
    <%= f.select :subject,Contact.subjects_i18n.keys.map {|k| [I18n.t("enums.contact.subject.#{k}"), k]} %>
  </div>

  <div class="text-center">
    <%= f.submit '送信',class:"btn btn-success" %>
  </div>
<% end %>
</div>