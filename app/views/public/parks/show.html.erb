<div class="container">
  <div class="row">
    <div class="col-6">
      <div id="map" style="width:100%; height:600px"></div>
    </div>
    <div class="col-6 show_detail">

          <% if @park_area.get_image(150,150) %>
            <!--投稿画像がなかったら、サンプリ画像を表示-->
          <% else %>
             <% @park_area.images.each do |image| %>
               <%= image_tag(image, width:150,height:150) %>
             <% end %>
          <% end %>

          <table class="table">
              <tr>
                <td>駐車場名</td>
                <td><%= @park_area.name %></td>
              </tr>
              <tr>
                <td>説明</td>
                <td><%= @park_area.description %></td>
              </tr>
              <tr>
                <td>金額</td>
                <td><%= @park_area.price %>円 / <%= @park_area.parking_time %>時間</td>
              </tr>
              <tr>
                <td>駐車可能条件</td>
                <td><%= @park_area.spec_i18n %></td>
              </tr>
          </table>
          <div id="favorite_btn_<%= @park_area.id %>">
            <%= render "public/favorites/favorite",park_area: @park_area %>
          </div>

          <% if @park_area.customer == current_customer %>
            <%= link_to"削除",public_park_path(@park_area.id),method: :delete,class:"btn btn-danger delete_btn" %></a>
          <% end %>
    </div>
  </div>

      <div>
        <div id="comment_btn">
          <%= render "public/comments/comment",park_comment: @park_comment, park_comments: @park_comments, park_area: @park_area %>
        </div>
      </div>
    </div>
</div>



<input type="hidden" id="park_area_lat" value="<%= @park_area.lat %>">
<input type="hidden" id="park_area_lng" value="<%= @park_area.lng %>">

<script>
   function initMap() {
     //変数lat/lngを宣言し、park_area_lat/lng(ID)のValue値を取得
      var lat =document.getElementById("park_area_lat").value
    　var lng =document.getElementById("park_area_lng").value

      // /18行目が初期マップ位置の拡大状況・19行目が緯度経度で福岡市を表示させる様にしている/
      var opts = {
        zoom: 15,
     center: new google.maps.LatLng(lat,lng),
     restriction: {
		　　latLngBounds: {
		　　	north: 33.600947,
		　　	south: 33.577563,
		　　	west: 130.386021,
		　　	east: 130.440347
	　    },
	　　	strictBounds: true
　　 }
      };

      var map = new google.maps.Map(document.getElementById("map"), opts);

      // LatLng(,)に19/20行目で取得した緯度経度を入れる。
      var m_latlng = new google.maps.LatLng(lat,lng);
      var marker = new google.maps.Marker({
   　   　　 position: m_latlng,
      　    map: map
      });
    }

 </script>
